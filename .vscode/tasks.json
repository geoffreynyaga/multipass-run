// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"options": {
		"shell": {
			"executable": "/bin/zsh",
			"args": ["-l", "-i", "-c"]
		}
	},
	"tasks": [
		{
			"label": "npm: watch",
			"type": "shell",
			"command": "pnpm run watch",
			"problemMatcher": {
				"base": "$tsc-watch",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\[webpack-cli\\] Compiler starting\\.\\.\\.",
					"endsPattern": "^\\[webpack-cli\\] (Compiler finished|Compiler is watching files for updates\\.\\.\\.)"
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "npm: watch-tests",
			"type": "shell",
			"command": "pnpm run watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		}
	]
}
