{
  "name": "multipass-run",
  "displayName": "Multipass Run",
  "description": "Run and manage Multipass instances in VsCode",
  "version": "0.0.1",
  "icon": "media/icon.png",
  "publisher": "GeoffreyNyaga",
  "repository": {
    "type": "git",
    "url": "https://github.com/geoffreynyaga/multipass-run"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "multipass-run.refresh",
        "title": "Refresh Multipass Instances",
        "icon": "$(refresh)"
      },
      {
        "command": "multipass-run.createInstanceMenu",
        "title": "Create Instance",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "multipass-run-sidebar",
          "title": "Multipass Run",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "multipass-run-sidebar": [
        {
          "id": "multipass-run-view",
          "name": "Instances",
          "type": "webview",
          "icon": "media/icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "multipass-run.refresh",
          "when": "view == multipass-run-view",
          "group": "navigation"
        },
        {
          "command": "multipass-run.createInstanceMenu",
          "when": "view == multipass-run-view",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "autoprefixer": "^10.4.21",
    "css-loader": "^7.1.2",
    "eslint": "^9.36.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.16",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
