{
  "name": "multipass-run",
  "displayName": "Multipass Run",
  "description": "Run and manage Multipass instances in VsCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "multipass-run.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "multipass-run.refresh",
        "title": "Refresh Multipass Instances",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "multipass-run-sidebar",
          "title": "Multipass Run",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "multipass-run-sidebar": [
        {
          "id": "multipass-run-view",
          "name": "Instances",
          "type": "webview",
          "icon": "$(rocket)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "multipass-run.refresh",
          "when": "view == multipass-run-view",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
